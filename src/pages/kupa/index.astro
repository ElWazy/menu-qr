---
import { getCollection } from "astro:content";
import Card from "../../components/Card.astro";
import Layout from "../../layouts/Layout.astro";

const kupas = await getCollection("kupa");
---

<Layout title="Menú de Küpa">
	<header class="flex justify-center items-center my-16">
		<h1 class="text-5xl">Küpa</h1>
	</header>

	<section class="section-cards">
		{
			kupas.map((kupa) => (
				<Card
					title={kupa.data.title}
					image={kupa.data.image}
					body={kupa.data.shortDescription}
					href={`/kupa/${kupa.slug}`}
					price={kupa.data.price}
				/>
			))
		}
	</section>

	<style>
		.section-cards {
			width: 100%;
			height: auto;
			display: flex;
			justify-content: center;
			flex-wrap: wrap;
			gap: 60px;
		}
	</style>
</Layout>
